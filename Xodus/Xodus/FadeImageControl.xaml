<UserControl
    x:Class="Xodus.FadeImageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Xodus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid>
        <Image x:Name="Staging" Stretch="UniformToFill" Visibility="Collapsed" />
        <Image x:Name="Image" Stretch="UniformToFill" Source="{Binding ElementName=ControlRoot, Path=PlaceHolder}"
               Height="{Binding ElementName=ControlRoot, Path=ActualHeight}"
               Width="{Binding ElementName=ControlRoot, Path=ActualWidth}" />
        <Grid.Resources>
            <Storyboard x:Name="ImageFadeOut">
                <FadeOutThemeAnimation Storyboard.TargetName="Image" />
            </Storyboard>
            <Storyboard x:Name="ImageFadeIn">
                <FadeInThemeAnimation Storyboard.TargetName="Image" />
            </Storyboard>
        </Grid.Resources>
    </Grid>
</UserControl>